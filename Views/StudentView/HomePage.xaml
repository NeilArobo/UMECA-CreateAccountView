<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             xmlns:local="clr-namespace:UM_Consultation_App_MAUI.Views.StudentView"  
             x:Class="UM_Consultation_App_MAUI.Views.StudentView.HomePage"  
             Background="#ffffff">  
    <Grid RowDefinitions="*, Auto">  
        <VerticalStackLayout  
            Padding="30,0"  
            Spacing="10">  

            <!-- User Information Section -->  
            <Label Text="549168"  
               FontSize="35"  
               Margin="0,60,0,0"  
               TextColor="#a9141d"  
               HorizontalOptions="Center"  
               FontAttributes="Bold"/>  

            <Label Text="Naive, Allen Vincent"  
               FontSize="28"  
               HorizontalOptions="Center"  
               FontAttributes="Bold"/>  

            <Label Text="Second Semester 24-25"  
               FontSize="20"  
               TextColor="#f98800"  
               HorizontalOptions="Center"  
               FontAttributes="Bold"/>  

            <Label Text="Second Year BSCPE"  
               FontSize="20"  
               HorizontalOptions="Center"  
               FontAttributes="Bold"/>  

            <!-- Pending Consultations -->  
            <Frame Padding="10" Margin="30"   
               HorizontalOptions="Center"   
               HasShadow="True"  
               WidthRequest="280"  
               BorderColor="White">  
                <VerticalStackLayout>  
                    <Label Text="PENDING CONSULTATIONS"  
                       FontSize="Medium"  
                       HorizontalOptions="Center"  
                       FontAttributes="Bold"  
                       Margin="10,0,0,10"/>  
                    <Label Text="6"  
                       FontSize="40"  
                       HorizontalOptions="Center"  
                       FontAttributes="Bold"  
                       Margin="10,0,0,0"/>  
                </VerticalStackLayout>  
            </Frame>  

            <!-- Notifications -->  
            <Frame Padding="10" Margin="10"   
               HorizontalOptions="Center"   
               HasShadow="True"  
               WidthRequest="380"  
               HeightRequest="300"  
               BorderColor="White">  
                <VerticalStackLayout>  
                    <Label Text="Notifications"  
                       FontSize="Medium"  
                       HorizontalOptions="Start"  
                       FontAttributes="Bold"  
                       Margin="10,0,0,10" />  
                    <Label FontSize="Medium"   
                       HorizontalOptions="Center"  
                       Margin="10,0,0,0">  
                        <Label.FormattedText>  
                            <FormattedString>  
                                <Span Text="Jay Al Gallenero " FontAttributes="Bold"/>  
                                <Span Text="has approved your consultation request."/>  
                            </FormattedString>  
                        </Label.FormattedText>  
                    </Label>  
                    <Label FontSize="Medium"   
                       HorizontalOptions="Center"  
                       Margin="10,10,0,0">  
                        <Label.FormattedText>  
                            <FormattedString>  
                                <Span Text="Jay Al Gallenero " FontAttributes="Bold" />  
                                <Span Text="has disapproved your consultation request."/>  
                            </FormattedString>  
                        </Label.FormattedText>  
                    </Label>  
                </VerticalStackLayout>  
            </Frame>  

        </VerticalStackLayout>  

        <ContentView>  
            <local:StudentBottomNav />  
        </ContentView>  
    </Grid>  
</ContentPage>